/*-----QWidget------------------------------------------------------------------------------------------------------------------------------------*/ 
QWidget { background-color: rgb(62,62,62); color: rgb(192,192,192); selection-border-radius: 3px; selection-color: rgb(0,0,0); selection-background-color: rgb(80,88,95); font-family: DejaVu Sans Condensed; font-size: 12px; font-weight: normal; }


/*-----QLabel-------------------------------------------------------------------------------------------------------------------------------------*/
QLabel { background-color: transparent; color: rgb(222,222,222); }

QLabel::disabled { background-color: transparent; color: rgb(136,136,136); } 


/*-----QMenuBar------------------------------------------------------------------------------------------------------------------------------------*/           
QMenuBar { background-color: rgb(62,62,62); color: rgb(193,193,193); padding: 1.2px; border-bottom: 1px Solid; border-color: rgb(96,96,96); margin: 3px;  }

QMenuBar::item { color: rgb(193,193,193); }

QMenuBar::item:disabled { color: rgb(136,136,136); }

QMenuBar::item:selected { color: rgb(244,156,28); background-color: rgb(32,32,32); border: 1px solid; border-color: rgb(244,156,28); margin-bottom: 1px; }

QMenuBar::item:pressed { color: rgb(244,156,28); background-color: rgb(46,46,46); border-color:rgb(0,0,0); }


/*-----QMenu------------------------------------------------------------------------------------------------------------------------------------*/    
QMenu { border: 1px solid; }

QMenu::separator { height: 1px; padding-left: 4px; margin-left: 10px; margin-right: 5px; }

QMenu::item { min-width : 150px; padding: 3px 20px 3px 20px; }

QMenu::item:disabled { color: rgb(136,136,136); }

QMenu::tearoff { background-color: rgb(144,154,162); border: 4px solid; border-color: rgb(62,62,62); border-radius: 7px; }

QMenu::tearoff:selected { background-color: rgb(244,156,28); border: 4px solid; border-color: rgb(62,62,62); border-radius: 7px; }


/*-----QToolTip-----------------------------------------------------------------------------------------------------------------------------------*/
QToolTip { background-color: rgb(240,240,180); color: rgb(0,0,0); padding: 3px; border-style: none; }


/*-----QPushButton------------------------------------------------------------------------------------------------------------------------------------*/ 
QPushButton { background-color: rgb(84,84,84); border: 1px solid; border-radius: 5px; }

QPushButton::disabled { background-color: rgb(55,55,55); color: rgb(106,106,106); border-color: rgb(45,45,45); }

QPushButton::hover { background-color: rgb(95,95,95); }

QPushButton:flat { background-color: transparent; border-radius: 0px; border: 0px; }

QPushButton:flat:hover { background-color: rgb(95,95,95); }

QPushButton:flat:checked { background-color: rgb(244,156,28); border-radius: 0px; border: 1px solid; }


/*-----QTextEdit------------------------------------------------------------------------------------------------------------------------------------*/
QTextEdit { background-color: rgb(109,109,109); color: rgb(255,255,255); border-color: rgb(9,8,7); }


/*-----QPlainTextEdit------------------------------------------------------------------------------------------------------------------------------------*/           
QPlainTextEdit { color: rgb(222,222,222);  background-color: rgb(43,43,43); selection-background-color: rgb(244,156,28); }

QPlainTextEdit:!editable { background-color: rgb(43,43,43); selection-background-color: rgb(244,156,28); }


/*-----QTabBar------------------------------------------------------------------------------------------------------------------------------------*/           
QTabBar::tab { border-width: 1px; padding: 2px 15px 2px 15px; border: 1px solid; }

QTabBar::tab:vertical { padding: 5px; }

QTabBar::tab:selected { background-color: rgb(65,65,65); color: rgb(222,222,222); border-width: 1px; border-bottom-style: solid; border-bottom-color: rgb(244,156,28); }

QTabBar::tab:!selected { background-color: rgb(65,65,65); color: rgb(222,222,222); }

QTabBar::tab:hover:!selected { background-color: rgb(80,80,80); color: rgb(222,222,222); }


/*-----QTabWidget------------------------------------------------------------------------------------------------------------------------------------*/           
QTabWidget::pane { background-color: rgb(32,32,32); }

QTabWidget::tab-bar { alignment: center; }


/*-----QLineEdit------------------------------------------------------------------------------------------------------------------------------------*/ 
QLineEdit { background-color: rgb(144,154,162); color: rgb(0,0,0); border-width: 1px; border-radius: 5px; selection-background-color: rgb(244,156,28); }

QLineEdit:focus { border-color: rgb(244,156,28); }

QToolBox {padding: 10px; }


/*-----QProgressBar------------------------------------------------------------------------------------------------------------------------------------*/ 
QProgressBar { border: 1px solid #222222; text-align: center; color: rgb(255,255,255); font-size: 12px; font-weight: bold; padding: 1px; border-radius: 3px; }

QProgressBar::chunk { background-color: rgb(244,156,28); border: 1px solid #373737; }


/*-----QMessageBox------------------------------------------------------------------------------------------------------------------------------------*/           
QMessageBox { color: rgb(192,192,192); background-color: rgb(62,62,62); }

QMessageBox QPushButton { background-color: rgb(84,84,84); min-width: 105px; min-height: 20px; border-radius: 0px; border: 0px; }

QMessageBox QPushButton:hover { background-color: rgb(95,95,95); } 

QMessageBox QPushButton:default { background-color: rgb(244,156,28); color: rgb(0,0,0); } 

QMessageBox QPushButton:default:hover { background-color: rgb(80,88,95); color: rgb(192,192,192); } 


/*-----QComboBox------------------------------------------------------------------------------------------------------------------------------------*/                          
QComboBox { background-color: rgb(76,76,76); color: rgb(222,222,222); border: 1px solid; border-radius: 2px; }

QComboBox:hover { background-color: rgb(95,95,95); }

QComboBox:disabled  { color: rgb(152,152,152); }

QComboBox QAbstractItemView { color: #D5D5D5; selection-color: #EAEAEA; border: 6px solid; border-color: #525252; selection-background-color: #686868; }


/*-----QRadioButton------------------------------------------------------------------------------------------------------------------------------------*/           
QRadioButton { color: #e6e6e6; height: 18px; }

QRadioButton::disabled { color: #656565; }

QRadioButton::indicator { border-radius: 0.2px; }

QRadioButton::indicator:checked { border-radius: 5px; border: 1px inset black; background-color: rgb(244,156,28); width: 13px; height: 13px; }

QRadioButton::indicator:unchecked { border: 0.5px inset black; border-radius: 5px; background-color: rgb(84,84,84);  width: 13px; height: 13px; }

QRadioButton::indicator:unchecked:hover { border: 0.5px inset black; border-radius: 5px; background-color: rgb(64,64,64); width: 13px; height: 13px; }


/*-----QCheckBox------------------------------------------------------------------------------------------------------------------------------------*/           
QCheckBox { background-color: transparent; height: 18px; } 

QCheckBox::indicator { width: 13px; height: 13px; } 

QCheckBox::indicator:checked { border: 1px ridge black; background-color: rgb(244,156,28); width: 13px; height: 13px; } 

QCheckBox::indicator:checked:hover {  width: 13px; height: 13px; border-style: solid; border-width: 1px; }   

QCheckBox::indicator:unchecked { inset gray; background-color: rgb(78,78,78); width: 13px; height: 13px; }

QCheckBox::indicator:unchecked:hover { background-color: rgb(64,64,64); width: 13px; height: 13px; }  

QCheckBox::indicator:unchecked:disabled { background-color: rgb(84,84,84); width: 13px; height: 13px; }  

QCheckBox::indicator:disabled { background-color: rgb(121,79,39); width: 13px; height: 13px; } 

QCheckBox::disabled { color: rgb(89,89,89); }


/*-----QScrollBar-----------------------------------------------------------------------------------------------------------------------------------*/           
QScrollBar:vertical { border: 0px; width:10px; margin: 0px 0px 0px 0px; }

QScrollBar:horizontal { border: 0px; width:10px; margin: 0px 0px 0px 0px; }

QScrollBar::handle:vertical { min-height: 0px; border: 1px solid; background-color: rgb(85,85,85); }

QScrollBar::handle:horizontal { min-height: 0px; border: 1px solid; background-color: rgb(85,85,85); }

QScrollBar::add-line:vertical { height: 0px; subcontrol-position: bottom; subcontrol-origin: margin; }

QScrollBar::add-line:horizontal { height: 0px; subcontrol-position: bottom; subcontrol-origin: margin; }

QScrollBar::sub-line:vertical { height: 0px; subcontrol-position: top; subcontrol-origin: margin; }

QScrollBar::sub-line:horizontal { height: 0px; subcontrol-position: top; subcontrol-origin: margin; }

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical { background: rgb(51,51,51); border: 1px solid; }


/*-----QSlider------------------------------------------------------------------------------------------------------------------------------------*/  
QSlider::groove:horizontal { background-color: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop: 0 rgba(176, 176, 176, 0), stop: 0.3 rgb(176, 176, 176), stop: 0.7 rgb(176, 176, 176), stop: 1 rgba(176, 176, 176, 0)); height: 1px; }

QSlider::handle:horizontal { background-color: rgb(244,156,28); border: none; width: 16px; height: 2px; margin: -4px 0; border-radius: 4px; }

QSlider::handle:horizontal:disabled { background-color: rgb(121,79,39); border-radius: 3px; }

QSlider::groove:vertical { background-color: transparent; width: 2px; }

QSlider::sub-page:vertical { background-color: rgb(176,176,176); }

QSlider::add-page:vertical { background-color: rgb(176,176,176); }

QSlider::handle:vertical { background-color: rgb(244,156,28); height: 14px; margin-left: -6px; margin-right: -6px; border-radius: 3px; }

QSlider::handle:vertical:disabled { background-color: rgb(121,79,39); border-radius: 3px; }


/*-----QHeaderView------------------------------------------------------------------------------------------------------------------------------------*/           
QHeaderView { background-color: #3b3b3b; border: 0px transparent transparent; }

QHeaderView:section { color: #f8f9f9; background-color: #3b3b3b; border: 0px transparent transparent; }


/*-----QGroupBox------------------------------------------------------------------------------------------------------------------------------------*/ 
QGroupBox { margin-top: 22px; }

QGroupBox::title { background-color: #404040; color: #ffffff; subcontrol-origin: margin; subcontrol-position: top left; padding: 3px; border-top-left-radius: 3px; border-top-right-radius: 3px; }

QGroupBox::title::disabled { background-color: #404040; color: #656565; subcontrol-origin: margin; subcontrol-position: top left; padding: 5px; border-top-left-radius: 3px; border-top-right-radius: 3px; }


/*-----QTreeView-----------------------------------------------------------------------------------------------------------------------------------*/           
QTreeView { background-color: rgb(76,76,76);  border: 0px transparent transparent; }

QTreeView:disabled { background-color: rgb(25,25,25);  color: #787878; }

QTreeView:item:hover { color: rgb(222,222,222); background-color: rgb(96,96,96); border: 0px transparent transparent; }

QTreeView:item:selected { background-color: rgb(54,54,54); color: rgb(244,156,28); }


/*-----QListView------------------------------------------------------------------------------------------------------------------------------------*/           
QListView { background-color: rgb(76,76,76); border: 0px transparent transparent; }

QListView:disabled { background-color: rgb(25,25,25); color: #787878; }

QListView:item { background-color: transparent; }

QListView:item:hover { color: rgb(222,222,222); background-color: rgb(96,96,96); border: 0px transparent transparent; }

QListView:item:selected { background-color: rgb(54,54,54); color: rgb(244,156,28); }

QListView:item:disabled { color: rgb(52,52,52); border: 0px transparent transparent; }


/*-----QTableView------------------------------------------------------------------------------------------------------------------------------------*/           
QTableView { color: rgb(153,153,153); background-color: rgb(40,40,40); border: 1px solid #3b3b3b; }

QTableView QTableCornerButton:section { background-color: #3b3b3b; border: 1px solid #3b3b3b; }

